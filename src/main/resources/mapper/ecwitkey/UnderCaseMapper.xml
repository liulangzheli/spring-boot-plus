<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.geekidea.springbootplus.ecwitkey.mapper.UnderCaseMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, case_name, category_id, major, province, city, soft_supplier, intro, create_time, remark
    </sql>

    <select id="getUnderCaseById" resultType="io.geekidea.springbootplus.ecwitkey.vo.UnderCaseQueryVo">
        select
        <include refid="Base_Column_List"/>
        from under_case where id = #{id}
    </select>

    <select id="getUnderCasePageList" resultType="io.geekidea.springbootplus.ecwitkey.vo.UnderCaseQueryVo">
        select
        <include refid="Base_Column_List"/>
        from under_case
    </select>

</mapper>
